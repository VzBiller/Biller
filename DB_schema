CREATE TABLE CUST_DATA (
    CUST_NAME VARCHAR(20),
    CUST_ID INT(10) PRIMARY KEY,
    BILL_ENT_TYPE INT(5) ,
    ADDRESS_ID INT(5) ,
    START_DATE DATE ,
    END_DATE DATE ,
    LAST_MODIFIED TIMESTAMP ,
    UNIT_OF_MEASURE INT(2) ,
    CHARGE_CYCLE INT(2),
    RATE_PLAN INT(2)
 ) 


CREATE TABLE ADDRESS_HISTORY (
    ADDRESS_ID INT(5),
    LINE1 VARCHAR(20) ,
    LINE2  VARCHAR(20) ,
    ZIP_CODE  VARCHAR(10) ,
    STATE VARCHAR(10),
    COUNTRY VARCHAR(10)
 ) 


CREATE TABLE REF_MAPPING ( 
TAB_NAME VARCHAR(50), 
COLUMN_NAME VARCHAR(20) , 
REF_TYPE_ID INT(10) 
) 


CREATE TABLE REFERENCE_CODE
( REF_TYPE_ID INT(10) ,
  REFERENCE_CODE INT(5) ,
  CODE_LABEL VARCHAR(30)
)


